<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/podcastCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/cardviewItem"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp">


    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/playingRV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_play_arrow" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/textWidthLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/podcastTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/podcastSecTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/uncheckRV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_blank" />


    </LinearLayout>

</android.support.v7.widget.CardView>
