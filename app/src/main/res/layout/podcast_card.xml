<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/podcastCardView"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/cardviewItem"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/rl1">

            <ImageView
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:id="@+id/playingRV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_play_arrow" />

            <TextView
                android:layout_toEndOf="@+id/playingRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_margin="3dp"
                android:maxLines="1"
                android:id="@+id/podcastTitle"/>

            <TextView
                android:layout_below="@+id/podcastTitle"
                android:layout_toEndOf="@+id/playingRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/podcastSecTitle"/>

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:id="@+id/uncheckRV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_blank" />



        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
